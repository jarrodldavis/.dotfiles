+#!/bin/sh
+set -eu
+
+echo "==> Fixing permissions..."
+chown -R 1000:1000 /var/www/html 2>/dev/null || true
+
+echo "==> Enable automatic Xdebug sessions..."
+echo 'xdebug.start_with_request=yes' | sudo tee -a /etc/php/8.3/cli/conf.d/20-xdebug.ini > /dev/null
+
+echo "==> Waiting for database to be ready..."
+while ! php artisan db:show; do
+  sleep 5
+done
+
+echo "==> Applying migrations..."
+php artisan migrate
+
+echo "==> Done!"
