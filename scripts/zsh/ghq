#!/usr/bin/env zsh

function ghq() {
  if [[ "$1" == "cd" ]]; then
    if [[ -z "$2" ]]; then
      ROOT_PATH=$(command ghq root)
      cd "$ROOT_PATH"
      return 0
    fi

    REPO_PATHS=($(command ghq list --full-path --exact "$2"))

    if [[ "${#REPO_PATHS[@]}" -eq 0 ]]; then
      echo "ghq: could not find repository '$2'"
      return 1
    elif [[ "${#REPO_PATHS[@]}" -gt 1 ]]; then
      echo "ghq: ambiguous repository name '$2'"
      return 1
    fi

    cd "$REPO_PATHS[1]"
  else
    command ghq $*
  fi
}
