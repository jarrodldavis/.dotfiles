{
    // settings sync
    "settingsSync.ignoredSettings": [
        "debug.javascript.defaultRuntimeExecutable",
        "editor.fontFamily"
    ],
    "editor.fontFamily": "JetBrains Mono",

    // window
    "window.dialogStyle": "custom",

    // workbench
    "workbench.colorTheme": "Default Dark+",
    "workbench.experimental.useCustomHover": true,
    "workbench.startupEditor": "none",

    // editor
    "editor.accessibilitySupport": "off",
    "editor.fontLigatures": true,
    "editor.lineNumbers": "relative",
    "editor.minimap.enabled": false,
    "editor.suggestSelection": "first",
    "editor.suggest.showStatusBar": true,

    // terminal
	"terminal.integrated.localEchoLatencyThreshold": -1,
    "terminal.integrated.scrollback": 10000,
	"terminal.integrated.showExitAlert": false,
    "terminal.integrated.tabs.enabled": true,

    // TypeScript
    "typescript.updateImportsOnFileMove.enabled": "never",

    // git
    "diffEditor.ignoreTrimWhitespace": false,
    "git.autofetch": true,
    "git.fetchOnPull": true,
    "git.enableCommitSigning": true,
    "git.enableSmartCommit": true,
    "git.showProgress": false,
    "scm.inputFontFamily": "editor",

    // GitHub Codespaces and Remote Development
    "dotfiles.repository": "jarrodldavis/dotfiles",
    "github.codespaces.defaultExtensions": [
        "jinsihou.diff-tool",
        "spadin.remote-x11",
        "ms-azuretools.vscode-docker",
        "editorconfig.editorconfig",
        "github.vscode-pull-request-github"
    ],
    "github.codespaces.showPerformanceExplorer": true,
    "remote.containers.defaultExtensions": [
        "jinsihou.diff-tool",
        "spadin.remote-x11",
        "ms-azuretools.vscode-docker",
        "editorconfig.editorconfig",
        "github.vscode-pull-request-github"
    ],
    "remote.containers.workspaceMountConsistency": "delegated",
    "remote.SSH.defaultExtensions": [
        "jinsihou.diff-tool",
        "spadin.remote-x11",
        "ms-azuretools.vscode-docker",
        "editorconfig.editorconfig",
        "github.vscode-pull-request-github"
    ],

    // Deno
    "deno.codeLens.implementations": true,
    "deno.codeLens.references": true,
    "deno.codeLens.referencesAllFunctions": true,
    "deno.suggest.autoImports": true,
    "deno.suggest.completeFunctionCalls": true,
    "deno.suggest.names": true,
    "deno.suggest.paths": true,

    // Docker
    "docker.showStartPage": false,

    // python
    "python.languageServer": "Pylance",
    "python.showStartPage": false,
    "python.terminal.activateEnvInCurrentTerminal": true,

    // rust-analyzer
    "rust-analyzer.inlayHints.enable": false,

    // sqltools
    "sqltools.autoOpenSessionFiles": false,

    // Tailwind CSS
    "tailwindCSS.emmetCompletions": true,

    // vim
    "vim.debug.silent": true,
    "vim.highlightedyank.enable": true,
    "vim.camelCaseMotion.enable": true,
    "vim.easymotion": true,
    "vim.replaceWithRegister": true,
    "vim.smartcase": true,
    "vim.sneak": true,
    "vim.surround": true,

    // uncategorized settings
    "": true,
}
