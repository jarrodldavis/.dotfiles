{
    // core editor

    "breadcrumbs.enabled": true,

    "debug.enableAllHovers": true,
    "debug.inlineValues": true,
    "debug.openDebug": "openOnFirstSessionStart",
    "debug.showSubSessionsInToolBar": true,
    "debug.toolBarLocation": "floating",

    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.lineNumbers": "relative",
    "editor.minimap.enabled": false,
    "editor.parameterHints.cycle": true,
    "editor.quickSuggestions": {
      "comments": false,
      "strings": false,
      "other": true,
    },
    "editor.renderControlCharacters": true,
    "editor.renderIndentGuides": true,
    "editor.renderWhitespace": "all",
    "editor.snippetSuggestions": "inline",
    "editor.tabCompletion": "off",

    "files.associations": {
      "*.har": "json",
    },
    "files.autoSave": "onFocusChange",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,

    "search.useIgnoreFiles": true,

    "terminal.integrated.cursorBlinking": true,

    "window.restoreFullscreen": true,
    "window.restoreWindows": "all",

    "workbench.commandPalette.preserveInput": true,
    "workbench.settings.editor": "json",
    "workbench.settings.useSplitJSON": true,

    // built-in extensions

    "emmet.excludeLanguages": [
      "javascriptreact",
      "typescriptreact"
    ],

    "git.autofetch": true,
    "git.autorefresh": true,
    "git.autoRepositoryDetection": false,
    "git.enableCommitSigning": true,
    "git.enableSmartCommit": true,
    "git.ignoredRepositories": [
      "/Users/jarrodldavis/.dotfiles/dotbot",
      "/Users/jarrodldavis/.dotfiles/dotbot-brew"
    ],
    "git.inputValidation": "always",
    "git.promptToSaveFilesBeforeCommit": "always",

    "npm.enableScriptExplorer": true,

    "javascript.updateImportsOnFileMove.enabled": "always",

    "typescript.tsdk": "node_modules/typescript/lib",
    "typescript.updateImportsOnFileMove.enabled": "always",

    // marketplace extensions

    "browser-preview.chromeExecutable": "/Applications/Chromium.app/Contents/MacOS/Chromium",
    "browser-preview.format": "png",

    "composer.executablePath": "composer",

    "lldb.adapterType": "native",

    "mochaExplorer.logpanel": true,
    "mochaExplorer.mochaPath": "node_modules/mocha",
    "mochaExplorer.timeout": 0,

    "rust.wait_to_build": 0,

    "sqltools.autoOpenSessionFiles": false,
    "sqltools.disableReleaseNotifications": true,

    "vim.disableExtension": false,
    "vim.highlightedyank.enable": true,
    "vim.highlightedyank.duration": 500,
    "vim.textwidth": 120,

    "vim.camelCaseMotion.enable": true,
    "vim.easymotion": true,
    "vim.easymotionMarkerFontSize": "16",
    "vim.easymotionMarkerFontFamily": "Menlo, Monaco, 'Courier New', monspace",
    "vim.easymotionMarkerHeight": 16,
    "vim.easymotionMarkerYOffset": 2,
    "vim.replaceWithRegister": true,
    "vim.sneak": true,
    "vim.sneakUseIgnorecaseAndSmartcase": true,
    "vim.surround": true,
}
