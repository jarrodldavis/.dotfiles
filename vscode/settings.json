{
    // core editor

    "breadcrumbs.enabled": true,

    "debug.enableAllHovers": true,
    "debug.inlineValues": true,
    "debug.openDebug": "openOnFirstSessionStart",
    "debug.showSubSessionsInToolBar": true,
    "debug.toolBarLocation": "floating",

    "editor.lineNumbers": "relative",
    "editor.minimap.enabled": false,
    "editor.parameterHints.cycle": true,
    "editor.quickSuggestions": {
      "comments": false,
      "strings": false,
      "other": true,
    },
    "editor.renderControlCharacters": true,
    "editor.renderIndentGuides": true,
    "editor.renderWhitespace": "all",
    "editor.rulers": [80],
    "editor.snippetSuggestions": "bottom",
    "editor.tabCompletion": "off",

    "files.associations": {
      "*.har": "json",
      "*.html": "html"
    },
    "files.autoSave": "onFocusChange",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,

    "search.useIgnoreFiles": true,

    "terminal.integrated.cursorBlinking": true,

    "window.restoreFullscreen": true,
    "window.restoreWindows": "all",

    "workbench.commandPalette.preserveInput": true,
    "workbench.settings.editor": "json",
    "workbench.settings.useSplitJSON": true,

    // built-in extensions

    "git.autofetch": true,
    "git.autorefresh": true,
    "git.autoRepositoryDetection": false,
    "git.enableCommitSigning": true,
    "git.enableSmartCommit": true,
    "git.ignoredRepositories": [
      "/Users/jarrodldavis/.dotfiles/dotbot",
      "/Users/jarrodldavis/.dotfiles/dotbot-brew"
    ],
    "git.inputValidation": "always",
    "git.promptToSaveFilesBeforeCommit": true,

    "npm.enableScriptExplorer": true,

    "javascript.updateImportsOnFileMove.enabled": "always",
    "typescript.updateImportsOnFileMove.enabled": "always",

    // marketplace extensions

    "browser-preview.chromeExecutable": "/Applications/Chromium.app/Contents/MacOS/Chromium",
    "browser-preview.format": "png",

    "composer.executablePath": "composer",

    "lldb.adapterType": "native",

    "mochaExplorer.logpanel": true,
    "mochaExplorer.mochaPath": "node_modules/mocha",
    "mochaExplorer.timeout": 0,

    "rust.wait_to_build": 0,

    "sqltools.connections": [
      {
        "name": "Flytime Development",
        "dialect": "PostgreSQL",
        "server": "localhost",
        "port": 5432,
        "username": "jarrodldavis",
        "password": "",
        "database": "flytime_development",
        "pqOptions": {
          "ssl": false
        }
      }
    ],
    "sqltools.autoOpenSessionFiles": false,
    "sqltools.disableReleaseNotifications": true,

    "vim.disableExtension": false,
    "vim.easymotion": true,
    "vim.hlsearch": true,
    "vim.normalModeKeyBindings": [
      {
        "before": ["u"],
        "after": [],
        "commands": [{ "command": "undo" }]
      },
      {
        "before": ["<C-r>"],
        "after": [],
        "commands": [{ "command": "redo" }]
      }
    ],
    "vim.sneak": true,
    "vim.sneakUseIgnorecaseAndSmartcase": true,
    "vim.textwidth": 120,
}
