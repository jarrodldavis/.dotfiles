{
    // editor
    "editor.lineNumbers": "relative",
    "editor.minimap.showSlider": "always",
    "editor.suggestSelection": "first",

    // git
    "git.showProgress": false,

    // terminal
    "terminal.integrated.fontFamily": "Menlo for Powerline",
    "terminal.integrated.scrollback": 10000,
    "terminal.integrated.shell.linux": "/bin/zsh",

    // remote extensions
    "remote.containers.defaultExtensions": [
        "ms-azuretools.vscode-docker",
        "ms-vsliveshare.vsliveshare",
        "ms-vsliveshare.vsliveshare-audio",
        "karigari.chat",
        "vsls-contrib.spaces"
    ],
    "remote.extensionKind": {
        "jinsihou.diff-tool": ["ui"]
    },

    // codespaces
    "codespaces.accountProvider": "Microsoft",
    "codespaces.enableSubmoduleCloning": true,
    "codespaces.defaultExtensions": [
        "ms-azuretools.vscode-docker",
        "ms-vsliveshare.vsliveshare",
        "ms-vsliveshare.vsliveshare-audio",
        "karigari.chat",
        "vsls-contrib.spaces"
    ],

    // remote dotfiles
    "dotfiles.repository": "https://github.com/jarrodldavis/dotfiles.git",
    "dotfiles.targetPath": "~/.dotfiles",
    "dotfiles.installCommand": "scripts/vscode-devcontainer.sh",
    "remote.containers.dotfiles.repository": "https://github.com/jarrodldavis/dotfiles.git",
    "remote.containers.dotfiles.targetPath": "~/.dotfiles",
    "remote.containers.dotfiles.installCommand": "scripts/vscode-devcontainer.sh",
}
