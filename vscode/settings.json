// Place your settings in this file to overwrite the default settings
{
  // built in
  "editor.largeFileOptimizations": false,
  "editor.lineNumbers": "relative",
  "editor.minimap.enabled": false,
  "editor.parameterHints.cycle": true,
  "editor.quickSuggestions": {
    "other": true
  },
  "editor.renderWhitespace": "all",
  "editor.renderIndentGuides": true,
  "editor.rulers": [120],
  "editor.snippetSuggestions": "bottom",
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.suggestOnTriggerCharacters": false,
  "editor.tabCompletion": true,

  "explorer.confirmDragAndDrop": false,

  "files.autoSave": "onFocusChange",

  "git.autofetch": true,
  "git.autoRepositoryDetection": false,
  "git.enableCommitSigning": true,
  "git.inputValidation": "always",
  "git.promptToSaveFilesBeforeCommit": true,

  "search.useIgnoreFiles": true,

  "terminal.integrated.cursorBlinking": true,

  "window.restoreFullscreen": true,
  "window.restoreWindows": "all",

  "workbench.commandPalette.preserveInput": true,

  // extensions
  "eslint.packageManager": "yarn",

  "gitlens.advanced.messages": {
    "suppressResultsExplorerNotice": true,
    "suppressShowKeyBindingsNotice": true,
    "suppressUpdateNotice": true,
    "suppressWelcomeNotice": true
  },
  "gitlens.codeLens.scopes": [
    "document",
    "containers",
    "blocks"
  ],
  "gitlens.defaultGravatarsStyle": "identicon",
  "gitlens.gitExplorer.files.layout": "auto",
  "gitlens.historyExplorer.enabled": true,
  "gitlens.historyExplorer.location": "scm",
  "gitlens.resultsExplorer.location": "scm",
  "gitlens.showWhatsNewAfterUpgrades": false,

  "gitProjectManager.baseProjectsFolders": ["~/dev/"],
  "gitProjectManager.ignoredFolders": ["node_modules", "bin", "obj"],

  "npm.enableScriptExplorer": true,

  "omnisharp.path": "latest",

  "vim.disableExtension": false,
  "vim.hlsearch": true,
  "vim.normalModeKeyBindings": [
    {
      "before": ["u"],
      "after": [],
      "commands": [{ "command": "undo" }]
    },
    {
      "before": ["<C-r>"],
      "after": [],
      "commands": [{ "command": "redo" }]
    }
  ],
}
