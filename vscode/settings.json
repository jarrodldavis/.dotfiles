{
    // settings sync
    "settingsSync.ignoredSettings": [
        "debug.javascript.defaultRuntimeExecutable",
        "editor.fontFamily"
    ],

    // workbench
    "workbench.colorTheme": "Default Dark+",

    // editor
    "editor.fontFamily": "JetBrains Mono",
    "editor.fontLigatures": true,
    "editor.lineNumbers": "relative",
    "editor.minimap.enabled": false,
    "editor.suggestSelection": "first",
    "editor.suggest.showStatusBar": true,

    // terminal
    "terminal.integrated.scrollback": 10000,
    "terminal.integrated.shellArgs.linux": ["-l"], // ensure login shells are used

    // git
    "git.autofetch": true,
    "git.fetchOnPull": true,
    "git.enableCommitSigning": true,
    "git.enableSmartCommit": true,
    "git.showProgress": false,
    "scm.inputFontFamily": "editor",

    // debug
    "debug.javascript.defaultRuntimeExecutable": {
        "pwa-node": "node",
        "pwa-chrome": "/Applications/Chromium.app/Contents/MacOS/Chromium"
    },
    "debug.javascript.usePreview": false,

    // GitHub Codespaces and Remote Development
    "dotfiles.repository": "jarrodldavis/dotfiles",
    "github.codespaces.defaultExtensions": [
        "jinsihou.diff-tool",
        "spadin.remote-x11",
        "ms-azuretools.vscode-docker",
        "editorconfig.editorconfig",
        "github.vscode-pull-request-github"
    ],
    "github.codespaces.showPerformanceExplorer": true,
    "remote.containers.defaultExtensions": [
        "jinsihou.diff-tool",
        "spadin.remote-x11",
        "ms-azuretools.vscode-docker",
        "editorconfig.editorconfig",
        "github.vscode-pull-request-github"
    ],
    "remote.SSH.defaultExtensions": [
        "jinsihou.diff-tool",
        "spadin.remote-x11",
        "ms-azuretools.vscode-docker",
        "editorconfig.editorconfig",
        "github.vscode-pull-request-github"
    ],

    // python
    "python.languageServer": "Pylance",
    "python.terminal.activateEnvInCurrentTerminal": true,

    // sqltools
    "sqltools.autoOpenSessionFiles": false,

    // vim
    "vim.debug.silent": true
}
